<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="436.0" prefWidth="537.0" spacing="15.0" styleClass="vbox" stylesheets="@estilos/estilos.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.bibliotecafx.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Título o mensaje de bienvenida -->
    <Label fx:id="welcomeText" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Bienvenido a la Biblioteca" />

    <!-- Botón para gestionar libros -->
    <Button onAction="#onGestionarLibros" prefHeight="48.0" prefWidth="144.0" style="-fx-font-size: 14px; -fx-padding: 10px;" styleClass="button" text="Gestionar Libros" />

    <!-- Botón para gestionar autores -->
    <Button onAction="#onGestionarAutores" prefHeight="48.0" prefWidth="146.0" style="-fx-font-size: 14px; -fx-padding: 10px;" styleClass="button" text="Gestionar Autores" />

    <!-- Botón para gestionar socios -->
    <Button onAction="#onGestionarSocios" prefHeight="48.0" prefWidth="146.0" style="-fx-font-size: 14px; -fx-padding: 10px;" styleClass="button" text="Gestionar Socios" />

    <!-- Botón para gestionar préstamos -->
    <Button onAction="#onGestionarPrestamos" prefHeight="48.0" prefWidth="146.0" style="-fx-font-size: 14px; -fx-padding: 10px;" styleClass="button" text="Gestionar Préstamos" />

    <!-- Área para mostrar mensajes o resultados -->
    <Label fx:id="statusLabel" style="-fx-font-size: 14px; -fx-text-fill: gray;" text="Selecciona una opción para comenzar" />
</VBox>
