<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.bibliotecafx.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- Título o mensaje de bienvenida -->
    <Label fx:id="welcomeText" text="Bienvenido a la Biblioteca" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <!-- Botón para gestionar libros -->
    <Button text="Gestionar Libros" style="-fx-font-size: 14px; -fx-padding: 10px;" onAction="#onGestionarLibros"/>

    <!-- Botón para gestionar autores -->
    <Button text="Gestionar Autores" style="-fx-font-size: 14px; -fx-padding: 10px;" onAction="#onGestionarAutores"/>

    <!-- Botón para gestionar socios -->
    <Button text="Gestionar Socios" style="-fx-font-size: 14px; -fx-padding: 10px;" onAction="#onGestionarSocios"/>

    <!-- Botón para gestionar préstamos -->
    <Button text="Gestionar Préstamos" style="-fx-font-size: 14px; -fx-padding: 10px;" onAction="#onGestionarPrestamos"/>

    <!-- Área para mostrar mensajes o resultados -->
    <Label fx:id="statusLabel" text="Selecciona una opción para comenzar" style="-fx-font-size: 14px; -fx-text-fill: gray;"/>
</VBox>
